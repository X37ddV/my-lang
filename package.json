{
    "name": "my-lang",
    "displayName": "MyLang",
    "description": "My language support for VS Code",
    "author": "X37ddV <X37ddV@gmail.com>",
    "license": "MIT",
    "version": "0.0.8",
    "repository": {
        "type": "git",
        "url": "https://github.com/X37ddV/my-lang.git"
    },
    "publisher": "X37ddV",
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "麦语言",
        "文华财经",
        "量化交易",
        "T8"
    ],
    "engines": {
        "vscode": "^1.87.0"
    },
    "activationEvents": [
        "onLanguage:plaintext"
    ],
    "main": "./client/out/extension.js",
    "icon": "images/icon.ico",
    "contributes": {
        "languages": [
            {
                "id": "my-lang",
                "aliases": [
                    "MyLang",
                    "my-lang"
                ],
                "extensions": [
                    ".my"
                ],
                "configuration": "./syntaxes/my-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "my-lang",
                "scopeName": "source.my",
                "path": "./syntaxes/my-language.tmLanguage.json"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorLangId == my-lang",
                    "command": "extension.runModelAtTQuant8",
                    "group": "navigation"
                },
                {
                    "when": "editorLangId == my-lang",
                    "command": "extension.importModelsFromTQuant8",
                    "group": "z_commands"
                }
            ]
        },
        "themes": [
            {
                "label": "My Lang Dark Theme",
                "uiTheme": "vs-dark",
                "path": "./themes/my-lang-dark-theme.json"
            },
            {
                "label": "My Lang Light Theme",
                "uiTheme": "vs",
                "path": "./themes/my-lang-light-theme.json"
            }
        ],
        "commands": [
            {
                "command": "extension.runModelAtTQuant8",
                "title": "%runModel.title%",
                "category": "%command.category%"
            },
            {
                "command": "extension.importModelsFromTQuant8",
                "title": "%importModels.title%",
                "category": "%command.category%"
            }
        ],
        "keybindings": [
            {
                "command": "extension.runModelAtTQuant8",
                "key": "f5",
                "when": "editorTextFocus && editorLangId == my-lang"
            },
            {
                "command": "extension.importModelsFromTQuant8",
                "key": "ctrl+shift+i",
                "when": "editorTextFocus && editorLangId == my-lang"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "%configuration.title%",
            "properties": {
                "myLang.localTQuant8Path": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "%localTQuant8Path.description%"
                },
                "myLang.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "%maxNumberOfProblems.description%"
                }
            }
        },
        "configurationDefaults": {
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {
                        "scope": "comment.line.double-slash.my-lang",
                        "settings": {
                            "foreground": "#6A9955"
                        }
                    },
                    {
                        "scope": "comment.block.double-star.my-lang",
                        "settings": {
                            "foreground": "#6A9955"
                        }
                    },
                    {
                        "scope": "comment.block.single-star.my-lang",
                        "settings": {
                            "foreground": "#6A9955"
                        }
                    },
                    {
                        "scope": "comment.property.name.my-lang",
                        "settings": {
                            "foreground": "#569CD6"
                        }
                    },
                    {
                        "scope": "comment.property.param-name.my-lang",
                        "settings": {
                            "foreground": "#9CDCFE"
                        }
                    },
                    {
                        "scope": "comment.property.param-default.my-lang",
                        "settings": {
                            "foreground": "#545454"
                        }
                    }
                ]
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^20.11.30",
        "@typescript-eslint/eslint-plugin": "^7.3.1",
        "@typescript-eslint/parser": "^7.3.1",
        "eslint": "^8.57.0",
        "typescript": "^5.4.3"
    }
}
