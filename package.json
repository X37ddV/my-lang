{
    "name": "my-lang",
    "displayName": "MyLang",
    "description": "My language support for VS Code",
    "author": "X37ddV <X37ddV@gmail.com>",
    "license": "MIT",
    "version": "0.0.4",
    "repository": {
        "type": "git",
        "url": "https://github.com/X37ddV/my-lang.git"
    },
    "publisher": "X37ddV",
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "麦语言",
        "文华财经",
        "量化交易",
        "T8"
    ],
    "engines": {
        "vscode": "^1.87.0"
    },
    "activationEvents": [
        "onLanguage:plaintext"
    ],
    "main": "./client/out/extension.js",
    "icon": "images/icon.ico",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "MyLang 配置",
            "properties": {
                "myLang.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "语法检查最大问题数"
                }
            }
        },
        "languages": [
            {
                "id": "my-lang",
                "aliases": [
                    "MyLang",
                    "my-lang"
                ],
                "extensions": [
                    ".my"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "my-lang",
                "scopeName": "source.my",
                "path": "./syntaxes/my-lang.tmLanguage.json"
            }
        ],
        "themes": [
            {
                "label": "My Lang Dark Theme",
                "uiTheme": "vs-dark",
                "path": "./themes/my-lang-dark-theme.json"
            },
            {
                "label": "My Lang Light Theme",
                "uiTheme": "vs",
                "path": "./themes/my-lang-light-theme.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^20.11.28",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "eslint": "^8.57.0",
        "typescript": "^5.4.2"
    }
}